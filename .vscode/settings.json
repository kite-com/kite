{
  "typescript.validate.enable": true,
  "typescript.format.enable": true,
  "javascript.validate.enable": true,
  "javascript.format.enable": true,
  "tslint.configFile": "tslint.json",
  "tslint.jsEnable": true,

  "files.associations": {
    "tslint.json": "jsonc",
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/package-lock.json": true,
    "**/package.json": true,
    "**/.gitignore": true,
    "config/*.js": true,
    "scripts/*.js": true,
    "src/*.d.ts": true,
    "**/serviceWorker.ts": true,
    "**/setupTests.ts": true,
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
  },
}
